<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_common_bg"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/pll_title"
        app:layout_marginTopPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|left"
        app:layout_marginRightPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="90%"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textcolor_blue2"
            app:layout_textSizePercent="30%"
            android:text="@string/rece_address"
            />

        <TextView
            android:id="@+id/tv_re_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="7%"
            android:textColor="@color/textcolor_little_blue"
            app:layout_textSizePercent="22%"
            />


    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/pll_amount"
        android:layout_below="@+id/pll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|left"
        app:layout_marginRightPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="90%"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textcolor_blue2"
            app:layout_textSizePercent="30%"
            android:text="@string/transfer_amount"
            />

        <TextView
            android:id="@+id/tv_send_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="7%"
            android:textStyle="bold"
            android:textColor="@color/textcolor_blue3"
            app:layout_textSizePercent="22%"
            />


    </com.zhy.android.percent.support.PercentLinearLayout>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/pll_remark"
        android:layout_below="@+id/pll_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|left"
        app:layout_marginRightPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="90%"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textcolor_blue2"
            app:layout_textSizePercent="30%"
            android:text="@string/remarks"
            />

        <TextView
            android:id="@+id/tv_send_remarkes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="5%"
            android:textStyle="bold"
            android:textColor="@color/textcolor_little_blue"
            app:layout_textSizePercent="22%"
            />


    </com.zhy.android.percent.support.PercentLinearLayout>


    <EditText
        android:id="@+id/dialog_pwd"
        android:background="@drawable/et_input"
        android:layout_below="@id/pll_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="90%"
        app:layout_marginTopPercent="6%"
        app:layout_marginRightPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_paddingLeftPercent="2%"
        app:layout_textSizePercent="4%"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
        android:inputType="textPassword"
        android:hint="@string/wallet_pwd"
        />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_below="@id/dialog_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13%"
        app:layout_widthPercent="40%"
        app:layout_marginBottomPercent="2%"
        app:layout_textSizePercent="4%"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_marginTopPercent="7%"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:background="@drawable/btn_gray_common"
        app:layout_marginLeftPercent="5%"
        />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_below="@id/dialog_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginRightPercent="5%"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="7%"
        app:layout_heightPercent="13%"
        app:layout_widthPercent="40%"
        app:layout_marginBottomPercent="2%"
        android:background="@drawable/btn_bg_common"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_textSizePercent="4%"
        android:text="@string/confirm"
        android:textAllCaps="false"
        />

</com.zhy.android.percent.support.PercentRelativeLayout>