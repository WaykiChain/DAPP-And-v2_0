<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_common_bg"
    android:orientation="vertical">



    <TextView
        android:id="@+id/tv_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="@string/create_tip"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="90%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="15%"
        app:layout_textSizePercent="9%"
        android:textColor="@color/textcolor_blue2"
        />


    <Button
        android:id="@+id/btn_cancel"
        android:layout_below="@id/tv_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="43%"
        app:layout_marginBottomPercent="2%"
        app:layout_textSizePercent="8%"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_marginTopPercent="25%"
        android:text="@string/cancel"
        android:background="@drawable/btn_gray_common"
        app:layout_marginLeftPercent="5%"
        />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_below="@id/tv_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginRightPercent="5%"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="25%"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="43%"
        app:layout_marginBottomPercent="2%"
        android:background="@drawable/btn_bg_common"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_textSizePercent="8%"
        android:text="@string/create_wallet"
        />

</com.zhy.android.percent.support.PercentRelativeLayout>